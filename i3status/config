# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "service_status mgz"
order += "service_status sch"
order += "service_status chr"
order += "sysdata"
order += "networkmanager"
order += "battery_level"
order += "volume main"
order += "tztime local"
order += "do_not_disturb"

service_status mgz {
        service_name = "MGZ"
        host = "magazzino.loadsmart.io"
        endpoint = "healthz"
}

service_status sch {
        service_name = "SCH"
        host = "scheduler-i9n.loadsmart.io"
        endpoint = "healthz"
}

service_status chr {
        service_name = "CHR"
        host = "chronos.loadsmart.io"
        endpoint = "healthz"
}

sysdata {
        format = "CPU: {cpu_used_percent}%, {cpu_temp:d}{temp_unit}"
        format += " MEM: {mem_used}"
}

networkmanager {
        format_device = "[\?if=general_connection [\?soft ][\?color=ap_signal W: {ap_signal}% at {ap_ssid}][\?soft ][\?color=good]]"
}

battery_level {
	format = "BAT {percent}%"
        notify_low_level = True
        threshold_degraded = 12
        threshold_bad = 10
}

volume main {
        format = "♪ %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

do_not_disturb {
    format = "[\?color=state&show DND]"
}
